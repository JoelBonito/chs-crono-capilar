{
    "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/mcp-config-schema.json",
    "_comment": "Security: API keys should be set via environment variables, not hardcoded",
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ],
            "env": {
                "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
            }
        },
        "shadcn": {
            "command": "npx",
            "args": [
                "shadcn@latest",
                "mcp"
            ]
        },
        "stitch": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://stitch.googleapis.com/mcp",
                "-H",
                "X-Goog-Api-Key: AQ.Ab8RN6JZdTBg21l6V5O6Dog6AJigphzpYuKA7O_5uYtWZuhkpg"
            ]
        }
    }
}